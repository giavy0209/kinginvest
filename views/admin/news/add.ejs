<!DOCTYPE html>
<html lang="en">
    <%-include ('../includes/head.ejs')%>
<body>
    <main>
        <div class="nps-container-fluid">
            <div class="nps-row m-0">
                <div class="nps-col-3">
                    <aside>
                        <%-include ('../includes/sidebar.ejs')%>
                    </aside>
                </div>
                <div class="nps-col-9">
                    <section class="content">
                        <%-include ('../includes/title-admin.ejs')%>

                        <form id="form" method="POST" action="/admin/<%=adminPage%>/add/">
                            <div class="group-input">
                                <div class="row">
                                    <div class="group">
                                        <span>Tiêu đề VI</span>
                                        <input type="text" name="titlevi">
                                    </div>
                                    <div class="group">
                                        <span>Tiêu đề EN</span>
                                        <input type="text" name="titleen">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>Tiêu đề VI (trên thanh trình duyệt)</span>
                                        <input type="text" name="browser_titlevi">
                                    </div>
                                    <div class="group">
                                        <span>Tiêu đề EN (trên thanh trình duyệt)</span>
                                        <input type="text" name="browser_titleen">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>Tiêu đề VI (trên các trang mxh)</span>
                                        <input type="text" name="meta_titlevi">
                                    </div>
                                    <div class="group">
                                        <span>Tiêu đề EN (trên các trang mxh)</span>
                                        <input type="text" name="meta_titleen">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>Icon VI (trên trình duyệt kế bên tiêu đề)</span>
                                        <input type="text" name="iconvi">
                                    </div>
                                    <div class="group">
                                        <span>Icon EN (trên trình duyệt kế bên tiêu đề)</span>
                                        <input type="text" name="iconen">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>URL VI</span>
                                        <input type="text" name="slugvi">
                                    </div>
                                    <div class="group">
                                        <span>URL EN</span>
                                        <input type="text" name="slugen">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>Mô tả ngắn (đặc biệt tốt cho SEO) VI</span>
                                        <input type="text" name="metadesvi">
                                    </div>
                                    <div class="group">
                                        <span>Mô tả ngắn (đặc biệt tốt cho SEO) EN</span>
                                        <input type="text" name="metadesen">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>URL hình ảnh khi đăng lên các MXH VI</span>
                                        <input type="text" name="meta_og_img_vi">
                                    </div>
                                    <div class="group">
                                        <span>URL hình ảnh khi đăng lên các MXH EN</span>
                                        <input type="text" name="meta_og_img_en">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group textarea">
                                        <span>Content vi</span>
                                        <textarea id="contentvi" name="contentvi"></textarea>
                                        <script>CKEDITOR.replace( 'contentvi' );</script>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group textarea">
                                        <span>Content en</span>
                                        <textarea id="contenten" name="contenten"></textarea>
                                        <script>CKEDITOR.replace( 'contenten' );</script>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <button id="addcat" type="button">Thêm danh mục</button>
                                    </div>
                                </div>

                                <div id="listcat">
                                    <div class="row">
                                        <div class="group">
                                            <span>Danh mục</span>
                                            <select name="category[]" id="">
                                                <option value="">----Chọn danh mục-----</option>
                                                <%categories.forEach(el => {%>
                                                    <option value="<%=el._id%>"><%=el.titlevi%></option>    
                                                <%})%>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <button id="addcomponentsbefore" type="button">Thêm thành phần trước bài viết</button>
                                    </div>
                                </div>

                                <div id="listcombefore">
                                    <h1 style="text-align: center;">thành phần trước bài viết</h1>
                                    <div class="row">
                                        <div class="group">
                                            <span>Thứ tự</span>
                                            <input value="1" type="number" name="ordering_before[]">
                                        </div>
                                        <div class="group">
                                            <span>thành phần</span>
                                            <select name="components_before[]" id="">
                                                <%components.forEach(com => {%>
                                                    <option value="<%=com._id%>"><%=com.humanName%></option>    
                                                <%})%>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="group">
                                            <span>Thứ tự</span>
                                            <input value="1" type="number" name="ordering_before[]">
                                        </div>
                                        <div class="group">
                                            <span>thành phần</span>
                                            <select name="components_before[]" id="">
                                                <%components.forEach(com => {%>
                                                    <option value="<%=com._id%>"><%=com.humanName%></option>    
                                                <%})%>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <button id="addcomponentsafter" type="button">Thêm thành phần sau bài viết</button>
                                    </div>
                                </div>

                                <div id="listcomafter">
                                    <h1 style="text-align: center;">thành phần sau bài viết</h1>
                                    <div class="row">
                                        <div class="group">
                                            <span>Thứ tự</span>
                                            <input value="1" type="number" name="ordering_after[]">
                                        </div>
                                        <div class="group">
                                            <span>thành phần</span>
                                            <select name="components_after[]" id="">
                                                <%components.forEach(com => {%>
                                                    <option value="<%=com._id%>"><%=com.humanName%></option>    
                                                <%})%>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="group">
                                            <span>Thứ tự</span>
                                            <input value="1" type="number" name="ordering_after[]">
                                        </div>
                                        <div class="group">
                                            <span>thành phần</span>
                                            <select name="components_after[]" id="">
                                                <%components.forEach(com => {%>
                                                    <option value="<%=com._id%>"><%=com.humanName%></option>    
                                                <%})%>
                                            </select>
                                        </div>
                                    </div>
                                </div>
    
                                <div class="row">
                                    <div class="group">
                                        <button type="submit" id="submit">Thêm</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </main>
</body>
<%include ('../includes/js.ejs')%>

<script>
    document.getElementById('addcat').onclick = e => {
        var html = `
        <div class="row">
            <div class="group">
                <span>Danh mục</span>
                <select name="category[]" id="">
                    <%categories.forEach(com => {%>
                        <option value="<%=com._id%>"><%=com.titlevi%></option>    
                    <%})%>
                </select>
            </div>
        </div>
        `
        console.log(html);
        document.getElementById('listcat').insertAdjacentHTML('beforeend', html)
    }
</script>

<script>
    document.getElementById('addcomponentsbefore').onclick = e => {
        var html = `
        <div class="row">
            <div class="group">
                <span>Thứ tự</span>
                <input value="1" type="number" name="ordering_before[]" id="">
            </div>
            <div class="group">
                <span>thành phần</span>
                <select name="components_before[]" id="">
                    <%components.forEach(com => {%>
                        <option value="<%=com._id%>"><%=com.humanName%></option>    
                    <%})%>
                </select>
            </div>
        </div>
        `
        document.getElementById('listcombefore').insertAdjacentHTML('beforeend', html)
    }
</script>

<script>
    document.getElementById('addcomponentsafter').onclick = e => {
        var html = `
        <div class="row">
            <div class="group">
                <span>Thứ tự</span>
                <input value="1" type="number" name="ordering_after[]" id="">
            </div>
            <div class="group">
                <span>thành phần</span>
                <select name="components_after[]" id="">
                    <%components.forEach(com => {%>
                        <option value="<%=com._id%>"><%=com.humanName%></option>    
                    <%})%>
                </select>
            </div>
        </div>
        `
        document.getElementById('listcomafter').insertAdjacentHTML('beforeend', html)
    }
</script>

</html>