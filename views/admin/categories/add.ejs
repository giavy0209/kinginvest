<!DOCTYPE html>
<html lang="en">
    <%-include ('../includes/head.ejs')%>
<body>
    <main>
        <div class="nps-container-fluid">
            <div class="nps-row m-0">
                <div class="nps-col-3">
                    <aside>
                        <%-include ('../includes/sidebar.ejs')%>
                    </aside>
                </div>
                <div class="nps-col-9">
                    <section class="content">
                        <%-include ('../includes/title-admin.ejs')%>

                        <form id="form" method="POST" action="/admin/<%=adminPage%>/add/">
                            <div class="group-input">
                                <div class="row">
                                    <div class="group">
                                        <span>Thứ tự VI</span>
                                        <input type="number" name="ordering_vi">
                                    </div>
                                    <div class="group">
                                        <span>Thứ tự EN</span>
                                        <input type="number" name="ordering_en">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>Trang VI</span>
                                        <select name="pagevi" id="">
                                            <option value="">----Chọn trang-----</option>
                                            <%pages.forEach(el => {%>
                                                <option value="<%=el._id%>"><%=el.name%></option>    
                                            <%})%>
                                        </select>
                                    </div>
                                    <div class="group">
                                        <span>Trang EN</span>
                                        <select name="pageen" id="">
                                            <option value="">----Chọn trang-----</option>
                                            <%pages.forEach(el => {%>
                                                <option value="<%=el._id%>"><%=el.name%></option>    
                                            <%})%>
                                        </select>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>Hiển thị VI</span>
                                        <input type="checkbox" checked name="show_vi">
                                    </div>
                                    <div class="group">
                                        <span>Hiển thị EN</span>
                                        <input type="checkbox" checked name="show_en">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>Mở trong tab mới VI</span>
                                        <input type="checkbox" name="open_new_tab_vi">
                                    </div>
                                    <div class="group">
                                        <span>Mở trong tab mới EN</span>
                                        <input type="checkbox"  name="open_new_tab_en">
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="group">
                                        <span>Tiêu đề VI (trên thanh trình duyệt)</span>
                                        <input type="text" name="titlevi">
                                    </div>
                                    <div class="group">
                                        <span>Tiêu đề EN (trên thanh trình duyệt)</span>
                                        <input type="text" name="titleen">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>Tiêu đề VI (trên các trang mxh)</span>
                                        <input type="text" name="meta_titlevi">
                                    </div>
                                    <div class="group">
                                        <span>Tiêu đề EN (trên các trang mxh)</span>
                                        <input type="text" name="meta_titleen">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>Icon VI (trên trình duyệt kế bên tiêu đề)</span>
                                        <input type="text" name="iconvi">
                                    </div>
                                    <div class="group">
                                        <span>Icon EN (trên trình duyệt kế bên tiêu đề)</span>
                                        <input type="text" name="iconen">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>URL VI</span>
                                        <input type="text" name="slugvi">
                                    </div>
                                    <div class="group">
                                        <span>URL EN</span>
                                        <input type="text" name="slugen">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>Mô tả ngắn (đặc biệt tốt cho SEO) VI</span>
                                        <input type="text" name="metadesvi">
                                    </div>
                                    <div class="group">
                                        <span>Mô tả ngắn (đặc biệt tốt cho SEO) EN</span>
                                        <input type="text" name="metadesen">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="group">
                                        <span>URL hình ảnh khi đăng lên các MXH VI</span>
                                        <input type="text" name="meta_og_img_vi">
                                    </div>
                                    <div class="group">
                                        <span>URL hình ảnh khi đăng lên các MXH EN</span>
                                        <input type="text" name="meta_og_img_en">
                                    </div>
                                </div>
    
                                <div class="row">
                                    <div class="group">
                                        <button type="submit" id="submit">Thêm</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </main>
</body>
